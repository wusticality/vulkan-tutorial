{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--example",
                "simple"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            },
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--example",
                "simple",
                "--release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build"
            },
            "presentation": {
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "build-shaders",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build-shaders.sh",
            "options": {
                "cwd": "${workspaceFolder}/scripts"
            },
            "group": {
                "kind": "build"
            },
            "presentation": {
                "panel": "dedicated",
                "clear": true,
            }
        }
    ]
}